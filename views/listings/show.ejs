<% layout("/layouts/boilerplate") -%>
<script>
  const listing = <%- JSON.stringify(listing) %>;
</script>

<div class="container mt-4">
  <!-- Listing Title -->
  <div class="row">
    <div class="col-12">
      <h3 class="mb-3"><%= listing.title %></h3>
    </div>
  </div>

  <!-- Listing Card -->
  <div class="card mb-4 listing-card mx-auto" style="max-width: 700px">
    <img
      src="<%= listing.image.url %>"
      class="card-img-top img-fluid"
      alt="Listing Image"
    />
    <div class="card-body">
      <p class="card-text">
        <strong>Owned By:</strong> <i><%= listing.owner.username %></i>
      </p>
      <p class="card-text"><%= listing.description %></p>
      <p class="card-text">
        <strong>Price:</strong> â‚¹<%= listing.price.toLocaleString("en-IN") %>
      </p>
      <p class="card-text">
        <strong>Location:</strong> <%= listing.location %>, <%= listing.country
        %>
      </p>
    </div>
  </div>

  <!-- Edit/Delete Buttons (Only for owner) -->
  <% if(currUser && listing.owner._id.equals(currUser._id)){ %>
  <div class="d-flex flex-wrap gap-2 mb-4 mx-auto" style="max-width: 700px">
    <a href="/listings/<%= listing._id %>/edit" id="btn" class="btn py-2 px-3"
      >Edit</a
    >
    <form method="post" action="/listings/<%= listing.id %>?_method=DELETE">
      <button id="btn" class="btn py-2 px-3">Delete</button>
    </form>
  </div>
  <% } %>

  <!-- Leave a Review -->
  <% if(currUser) { %>
  <div class="mb-5 mx-auto" style="max-width: 700px">
    <hr />
    <h4>Leave a Review</h4>
    <form
      action="/listings/<%= listing.id %>/review"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <!-- Rating -->
      <div class="mb-3">
        <label for="ratings" class="form-label">Rating</label>
        <fieldset id="ratings" class="starability-coinFlip">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input type="radio" id="rate1" name="review[rating]" value="1" />
          <label for="rate1" title="Terrible">1 star</label>
          <input type="radio" id="rate2" name="review[rating]" value="2" />
          <label for="rate2" title="Not good">2 stars</label>
          <input type="radio" id="rate3" name="review[rating]" value="3" />
          <label for="rate3" title="Average">3 stars</label>
          <input type="radio" id="rate4" name="review[rating]" value="4" />
          <label for="rate4" title="Very good">4 stars</label>
          <input type="radio" id="rate5" name="review[rating]" value="5" />
          <label for="rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>

      <!-- Comment -->
      <div class="mb-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea
          name="review[comment]"
          id="comment"
          cols="30"
          rows="4"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please add some comments for review</div>
      </div>

      <button class="btn py-2 px-3" id="rev-btn">Submit</button>
    </form>
    <hr />
  </div>
  <% } %>

  <!-- All Reviews -->
  <% if (listing.reviews.length > 0) { %>
  <div class="container my-5">
    <div class="mx-auto" style="max-width: 700px">
      <!-- Section Heading -->
      <h5 class="fw-semibold mb-3">Guest Reviews</h5>
      <hr class="mb-4" />

      <!-- Reviews Grid -->
      <div class="row row-cols-1 row-cols-md-2 g-4">
        <% for (review of listing.reviews) { %>
        <div class="col">
          <div class="card p-3 h-100 shadow-sm border-0">
            <!-- Card Body -->
            <div class="card-body">
              <h6 class="card-title fw-semibold mb-1">
                @<%= review.author.username %>
              </h6>

              <!-- Rating -->
              <div
                class="starability-result mb-2"
                data-rating="<%= review.rating %>"
              ></div>

              <!-- Comment -->
              <p class="card-text text-muted small"><%= review.comment %></p>
            </div>

            <!-- Delete Action -->
            <% if (currUser) { %>
            <div class="card-footer bg-transparent border-top-0 text-end">
              <form
                method="post"
                action="/listings/<%= listing._id %>/review/<%= review._id %>?_method=DELETE"
              >
                <button class="btn btn-sm" id="rev-btn">Delete</button>
              </form>
            </div>
            <% } %>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
  <% } %>

  <!-- Map Section -->
  <div class="mb-5 mx-auto" style="max-width: 700px">
    <h4>Where you'll be</h4>
    <div id="map" class="w-100" style="height: 400px"></div>
  </div>
</div>

<script src="/js/map.js"></script>
